{
   "$schema":       "http://json-schema.org/draft-03/schema#",
   "id":            "/rvbd/schema/tm/1.0/config/active/ssl/server_keys#create",
   "title":         "SSL Key Pair",
   "description":   "SSL Server Certificates are presented to clients by virtual servers when SSL decryption is enabled.",
    "javaType" :     "org.rackspace.stingray.client.ssl.keypair.SslKeyPairCreate",
   "type":          "object",
   "required":      true,
   
   "properties": {
      "properties": {
          "javaType" :     "org.rackspace.stingray.client.ssl.keypair.SslKeyPairCreateProperties",
         "type":                  "object",
         "required":              true,
         "additionalProperties":  false,
         
         "properties": {
            
            "basic": {
                "javaType" :     "org.rackspace.stingray.client.ssl.keypair.SslKeyPairCreateBasic",
               "type":                  "object",
               "required":              true,
               "additionalProperties":  false,
               
               "properties": {
                  "public": {
                     "description":   "Public certificate",
                     
                     "type":          "string",
                     "required":      true
                  },
                  
                  "request": {
                     "description":   "Certificate Signing Request for certificate",
                     
                     "type":          "string",
                     "required":      true
                  },
                  
                  "private": {
                     "description":   "Private key for certificate",
                     
                     "type":          "string",
                     "required":      true
                  },
                  
                  "note": {
                     "description":   "Notes for this certificate",
                     
                     "type":          "string",
                     "required":      true
                  }
               }
            }
         }
      }
   }
}
