{
   "$schema":       "http://json-schema.org/draft-03/schema#",
   "id":            "/rvbd/schema/tm/1.0/config/active/ssl/client_keys#update",
   "title":         "SSL Client Key Pair",
   "description":   "SSL Client Certificates are used when connecting to backend nodes that require client certificate authentication.",
    "javaType" :     "org.rackspace.stingray.client.ssl.client.keypair.SslClientKeyPairUpdate",
   "type":          "object",
   "required":      false,
   
   "properties": {
      "properties": {
          "javaType" :     "org.rackspace.stingray.client.ssl.client.keypair.SslClientKeyPairUpdateProperties",
         "type":                  "object",
         "required":              true,
         "additionalProperties":  false,
         
         "properties": {
            
            "basic": {
                "javaType" :     "org.rackspace.stingray.client.ssl.client.keypair.SslClientKeyPairUpdateBasic",
               "type":                  "object",
               "required":              false,
               "additionalProperties":  false,
               
               "properties": {
                  "public": {
                     "description":   "Public certificate",
                     
                     "type":          "string",
                     "required":      true
                  },
                  
                  "request": {
                     "description":   "Certificate Signing Request for certificate",
                     
                     "type":          "string",
                     "required":      true
                  },
                  
                  "private": {
                     "description":   "Private key for certificate",
                     
                     "type":          "string",
                     "required":      true
                  },
                  
                  "note": {
                     "description":   "Notes for this certificate",
                     
                     "type":          "string",
                     "required":      true
                  }
               }
            }
         }
      }
   }
}
