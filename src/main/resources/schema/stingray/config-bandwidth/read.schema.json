{
   "$schema":       "http://json-schema.org/draft-03/schema#",
   "id":            "/rvbd/schema/tm/1.0/config/active/bandwidth#read",
   "title":         "Bandwidth Class",
   "description":   "A Bandwidth class, which can be assigned to a virtual server or pool in order to limit the number of bytes per second used by inbound or outbound traffic.",
   "javaType" :     "org.rackspace.stingray.client.bandwidth.BandwidthRead",
   "type":          "object",
   "required":      true,
   
   "properties": {
      "properties": {
          "javaType" :     "org.rackspace.stingray.client.bandwidth.BandwidthReadProperties",
         "type":                  "object",
         "required":              true,
         "additionalProperties":  true,
         
         "properties": {
            
            "basic": {
                "javaType" :     "org.rackspace.stingray.client.bandwidth.BandwidthReadBasic",
               "type":                  "object",
               "required":              true,
               "additionalProperties":  true,
               
               "properties": {
                  "maximum": {
                     "description":   "The maximum bandwidth to allocate to connections that are associated with this bandwidth class (in kbits/second).",
                     
                     "type":          "integer",
                     "required":      true,
                     "minimum":       1,
                     "maximum":       20000000
                  },
                  
                  "note": {
                     "description":   "A description of this bandwidth class.",
                     
                     "type":          "string",
                     "required":      true
                  },
                  
                  "sharing": {
                     "description":   "The scope of the bandwidth class.",
                     
                     "type":          "string",
                     "required":      true,
                     "enum":          ["cluster","connection","machine"]
                  }
               }
            }
         }
      }
   }
}
