{
   "$schema":       "http://json-schema.org/draft-03/schema#",
   "id":            "/rvbd/schema/tm/1.0/config/active/bandwidth#create",
   "title":         "Bandwidth Class",
   "description":   "A Bandwidth class, which can be assigned to a virtual server or pool in order to limit the number of bytes per second used by inbound or outbound traffic.",
   "javaType" :     "org.rackspace.stingray.client.bandwidth.BandwidthCreate",
   "type":          "object",
   "required":      false,
   
   "properties": {
       "properties": {
          "javaType" :     "org.rackspace.stingray.client.bandwidth.BandwidthCreateProperties",
         "type":                  "object",
         "required":              true,
         "additionalProperties":  false,

         "properties": {

            "basic": {
               "javaType" :     "org.rackspace.stingray.client.bandwidth.BandwidthCreateBasic",
               "type":                  "object",
               "required":              false,
               "additionalProperties":  false,

               "properties": {
                  "maximum": {
                     "description":   "The maximum bandwidth to allocate to connections that are associated with this bandwidth class (in kbits/second).",

                     "type":          "integer",
                     "minimum":       1,
                     "maximum":       20000000
                  },

                  "note": {
                     "description":   "A description of this bandwidth class.",

                     "type":          "string"
                  },

                  "sharing": {
                     "description":   "The scope of the bandwidth class.",

                     "type":          "string",
                     "enum":          ["cluster","connection","machine"]
                  }
               }
            }
         }
      }
   }
}
